<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnnouncementPlatformMobile.LogInPage" Title="LogIn">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Login" FontSize="Title" HorizontalOptions="Center" Margin="0,0,0,20" />

            <Entry Placeholder="Username" x:Name="UsernameEntry" PlaceholderColor="#FFFFFF" BackgroundColor="#333333" TextColor="#FFFFFF" WidthRequest="200" />
            <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" PlaceholderColor="#FFFFFF" BackgroundColor="#333333" TextColor="#FFFFFF" WidthRequest="200" />

            <Button Text="Login" Clicked="OnLoginClicked" HorizontalOptions="Center" Margin="0,40,0,0" BackgroundColor="#00C853" TextColor="Black" CornerRadius="10" WidthRequest="150" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>